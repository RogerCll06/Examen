    </div>
</div






<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        //manejar el dropdown de marca
        $("#marcaDrodown").change(function () {
            var marcaID = $(this).val();
            console.log("idmarca" + marcaID);
            $("#modeloDrodown").empty().append("<option value=''>selecione una modelo</option>");

            if (marcaID) {
                $.ajax({
                    url: "/Vehiculos/ObtenerModelos",
                    type: "GET",
                    data: {marcaID:marcaID},
                    success: function(modelos)
                    {
                        $.each(modelos, function (index, modelo) {
                            $("#modeloDrodown").append("<option value='" + modelo.id + "'>" + modelo.nombreModelo + "</option>");
                        });
                        //habilitar el dropdpwn de modelo
                        $("#modeloDrodown")
                    }
                })
            }
        })
    })
</script>